{% apply spaceless %}
<link
    rel="stylesheet"
{# href #}
    {% if data.href is defined %}
        href="{{ data.href }}"
    {% endif %}
{# integrity #}
    {% if data.integrity is defined and null != data.integrity and '' != data.integrity %}
        integrity="{{ data.integrity }}"
    {% endif %}
{# crossorigin #}
    {% if data.crossorigin is defined %}
        crossorigin="{{ data.crossorigin }}"
    {% endif %}
 />
{% endapply %}